<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etAddCustomer_id"
        android:layout_width="match_parent"
        android:hint="Customer ID"
        android:layout_height="wrap_content" android:layout_margin="10dp">
		
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etAddCustomer_discountCode"
        android:layout_width="match_parent"
                android:hint="Discount Code"
        android:layout_height="wrap_content" android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/etAddCustomer_zip"
        android:layout_width="match_parent"
                android:hint="ZIP"
        android:layout_height="wrap_content" android:layout_margin="10dp"/>

    <Button
        android:id="@+id/bAddCustomer_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" android:layout_gravity="center_horizontal"/>

</LinearLayout>